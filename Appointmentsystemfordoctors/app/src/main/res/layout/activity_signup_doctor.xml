<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pale_blue_background"
    tools:context=".Activities.Entry.SignUp_Doctor">

    <TextView
        android:id="@+id/contact_in_text_view_password_guide_Doctor"
        android:layout_width="171dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:text="Choose a PassWord with 9 digits"
        android:textColor="#150101"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/personal_in_text_view_Doctor"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fill_in_text_view_Doctor" />


    <EditText
        android:id="@+id/user_ID_input_register_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#DAC4DD"
        android:ems="10"
        android:hint="License number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/user_first_name_input_register_Doctor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_first_name_input_register_Doctor"
        app:layout_constraintTop_toTopOf="@+id/user_first_name_input_register_Doctor" />

    <TextView
        android:id="@+id/contact_in_text_view_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:text="For us to connect with you"
        android:textColor="#150101"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/user_ID_input_register_Doctor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/user_ID_input_register_Doctor"
        app:layout_constraintTop_toTopOf="@+id/user_ID_input_register_Doctor" />

    <TextView
        android:id="@+id/personal_in_text_view_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:text="Personal Details"
        android:textColor="#150101"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fill_in_text_view_Doctor" />

    <TextView
        android:id="@+id/address_in_text_view_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:text="Clinic adrress :"
        android:textColor="#150101"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/user_password_input_register_Doctor"
        app:layout_constraintStart_toStartOf="@+id/user_password_input_register_Doctor"
        app:layout_constraintTop_toTopOf="@+id/user_password_input_register_Doctor" />

    <EditText
        android:id="@+id/user_house_number_input_register_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#DAC4DD"
        android:ems="10"
        android:hint="House number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/user_living_street_input_register_Doctor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_living_street_input_register_Doctor"
        app:layout_constraintTop_toTopOf="@+id/user_living_street_input_register_Doctor" />

    <EditText
        android:id="@+id/user_living_street_input_register_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#DAC4DD"
        android:ems="10"
        android:hint="Street"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/user_living_city_input_register_Doctor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_living_city_input_register_Doctor"
        app:layout_constraintTop_toTopOf="@+id/user_living_city_input_register_Doctor" />

    <TextView
        android:id="@+id/fill_in_text_view_Doctor"
        android:layout_width="378dp"
        android:layout_height="27dp"
        android:text="Please fill in the following details : "
        android:textColor="#150101"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/personal_in_text_view_Doctor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/contact_in_text_view_password_guide_Doctor"
        tools:layout_editor_absoluteY="135dp" />

    <EditText
        android:id="@+id/user_first_name_input_register_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#DAC4DD"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/personal_in_text_view_Doctor"
        app:layout_constraintStart_toStartOf="@+id/personal_in_text_view_Doctor"
        app:layout_constraintTop_toTopOf="@+id/personal_in_text_view_Doctor" />

    <EditText
        android:id="@+id/user_email_input_register_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#DAC4DD"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/contact_in_text_view_Doctor"
        app:layout_constraintStart_toStartOf="@+id/contact_in_text_view_Doctor"
        app:layout_constraintTop_toTopOf="@+id/contact_in_text_view_Doctor" />

    <EditText
        android:id="@+id/user_living_city_input_register_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#DAC4DD"
        android:ems="10"
        android:hint="City"
        android:inputType="text"
        android:linksClickable="false"
        app:layout_constraintEnd_toEndOf="@+id/address_in_text_view_Doctor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/address_in_text_view_Doctor"
        app:layout_constraintTop_toTopOf="@+id/address_in_text_view_Doctor" />

    <Button
        android:id="@+id/registr_new_Doctor_button"
        android:layout_width="144dp"
        android:layout_height="69dp"
        android:layout_marginTop="30dp"
        android:text="Sign Up!"
        app:layout_constraintBottom_toBottomOf="@+id/user_progress_bar_Doctor"
        app:layout_constraintEnd_toEndOf="@+id/user_house_number_input_register_Doctor"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="@+id/user_house_number_input_register_Doctor"
        app:layout_constraintTop_toBottomOf="@+id/user_house_number_input_register_Doctor"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/user_password_input_register_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="44dp"
        android:background="#DAC4DD"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/contact_in_text_view_password_guide_Doctor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contact_in_text_view_password_guide_Doctor"
        app:layout_constraintTop_toTopOf="@+id/contact_in_text_view_password_guide_Doctor" />

    <EditText
        android:id="@+id/user_phone_input_register_Doctor"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#DAC4DD"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/user_email_input_register_Doctor"
        app:layout_constraintStart_toStartOf="@+id/user_email_input_register_Doctor"
        app:layout_constraintTop_toTopOf="@+id/user_email_input_register_Doctor" />

    <ProgressBar
        android:id="@+id/user_progress_bar_Doctor"
        style="?android:attr/progressBarStyle"
        android:layout_width="79dp"
        android:layout_height="100dp"
        android:layout_marginBottom="172dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toEndOf="@+id/registr_new_Doctor_button"
        app:layout_constraintTop_toBottomOf="@+id/user_phone_input_register_Doctor"
        app:layout_constraintVertical_bias="0.971" />

</androidx.constraintlayout.widget.ConstraintLayout>